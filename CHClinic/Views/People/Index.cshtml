        @Html.ActionLink("Edit", "Edit", new { id = item.PersonId }) |
        @Html.ActionLink("Details", "Details", new { id = item.PersonId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.PersonId }) |
        @Html.ActionLink("Select", "Index", new { id = item.PersonId })
    </td>
    </tr>
}

</table>

@if (Model.FirstOrDefault().Histories!=null)
{
    <h3>History of @Html.DisplayFor(modelItem => Model.FirstOrDefault().FirstName)</h3>
    <table class="table">
        <tr>
            <th>@Html.DisplayFor(model => Model.FirstOrDefault().Histories.FirstOrDefault().MaritalStatus)</th>
            <th></th>
            <th>@Html.DisplayFor(model => Model.FirstOrDefault().Histories.FirstOrDefault().Obes)</th>
            <th>@Html.DisplayFor(model => Model.FirstOrDefault().Histories.FirstOrDefault().PersonId)</th>
        </tr>

        @foreach (var item in Model.FirstOrDefault().Histories)
        {
            <tr>
                <th>@Html.DisplayFor(model => item.MaritalStatus)</th>
                <th></th>
                <th>@Html.DisplayFor(model => item.Obes)</th>
                <th>@Html.DisplayFor(model => item.PersonId)</th>
            </tr>
        }
        </table>

}